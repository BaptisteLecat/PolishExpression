<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>PolishExpressionApp</display-name>
  <description>
    Une application Web de quizz math√©matiques
  </description>
  <session-config>
    <session-timeout>600</session-timeout>
  </session-config>

  <welcome-file-list>
    <welcome-file>/WEB-INF/views/home.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>LoginController</servlet-name>
    <servlet-class>web.controller.auth.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RegisterController</servlet-name>
    <servlet-class>web.controller.auth.RegisterController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterController</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>HomeController</servlet-name>
    <servlet-class>web.controller.HomeController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomeController</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ProfilController</servlet-name>
    <servlet-class>web.controller.ProfilController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProfilController</servlet-name>
    <url-pattern>/profil</url-pattern>
  </servlet-mapping>

</web-app>
